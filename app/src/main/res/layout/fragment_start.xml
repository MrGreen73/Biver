<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ivan.biver.view.StartFragment"
    android:orientation="vertical"
    android:padding="@dimen/paddingLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackgroundStartFragment"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/rocket"/>


        <Button
            android:id="@+id/btnInGoogle"
            android:layout_width="@dimen/widthBtnStartFragment"
            android:layout_height="@dimen/heightBtnStartFragment"
            android:text="@string/btnInGoogleStart"
            android:textSize="@dimen/btnTextSizeStart"
            android:padding="@dimen/paddingBtn"
            android:layout_marginTop="@dimen/btnMarginVerticalStart"
            android:background="@color/colorBtnStartFragmentGoogle"/>


        <Button
            android:id="@+id/btnInFacebook"
            android:layout_width="@dimen/widthBtnStartFragment"
            android:layout_height="@dimen/heightBtnStartFragment"
            android:text="@string/btnInGoogleStart"
            android:textSize="@dimen/btnTextSizeStart"
            android:padding="@dimen/paddingBtn"
            android:layout_marginTop="@dimen/btnMarginVerticalStart"
            android:background="@color/colorBtnStartFragmentFacebook"/>


        <Button
            android:id="@+id/btnInTwitter"
            android:layout_width="@dimen/widthBtnStartFragment"
            android:layout_height="@dimen/heightBtnStartFragment"
            android:text="@string/btnInGoogleStart"
            android:textSize="@dimen/btnTextSizeStart"
            android:padding="@dimen/paddingBtn"
            android:layout_marginTop="@dimen/btnMarginVerticalStart"
            android:background="@color/colorBtnStartFragmentTwitter"/>


        <Button
            android:id="@+id/btnInEmail"
            android:layout_width="@dimen/widthBtnStartFragment"
            android:layout_height="@dimen/heightBtnStartFragment"
            android:text="@string/btnInGoogleStart"
            android:textSize="@dimen/btnTextSizeStart"
            android:padding="@dimen/paddingBtn"
            android:layout_marginTop="@dimen/btnMarginVerticalStart"
            android:background="@color/colorBtnStartFragmentEmail"/>


        <Button
            android:id="@+id/btnInPhone"
            android:layout_width="@dimen/widthBtnStartFragment"
            android:layout_height="@dimen/heightBtnStartFragment"
            android:text="@string/btnInGoogleStart"
            android:textSize="@dimen/btnTextSizeStart"
            android:padding="@dimen/paddingBtn"
            android:layout_marginTop="@dimen/btnMarginVerticalStart"
            android:background="@color/colorBtnStartFragmentPhone"/>

    </LinearLayout>


</LinearLayout>
